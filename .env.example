# Telegram API Configuration
# Get these from https://my.telegram.org/apps
API_ID=your_telegram_api_id
API_HASH=your_telegram_api_hash

# Bot Configuration
# Get this from @BotFather on Telegram
BOT_TOKEN=your_bot_token

# User Phone Number (for accessing message history)
# Format: +1234567890
Phone_number=your_phone_number

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/telegram_search_bot
# For Docker Compose:
# MONGO_URI=mongodb://mongodb:27017/telegram_search_bot

# MongoDB Root User (for Docker)
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_password

# Production Environment Variables
# Uncomment and use these in production
# PROD_API_ID=your_production_api_id
# PROD_API_HASH=your_production_api_hash
# PROD_BOT_TOKEN=your_production_bot_token
# PROD_MONGO_URI=your_production_mongo_uri

# Optional: Webhook Configuration (for production)
# WEBHOOK_URL=https://your-domain.com/webhook
# WEBHOOK_PORT=8443

# Optional: Logging Level
# LOG_LEVEL=INFO

# Optional: File Storage Configuration
# MAX_DOWNLOAD_SIZE_MB=100
# DOWNLOAD_TIMEOUT_SECONDS=300